---
const { frontmatter } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{frontmatter.judul}</title>
  </head>
  <body>
    <a
      href="/"
      class="p-3 bg-black text-white font-bold uppercase sticky top-0 block"
      >Zen</a
    >
    <div class="p-2 prose mx-auto py-6">
      <h1>{frontmatter.judul}</h1>
      <p><em>{frontmatter.ringkasan}</em></p>
      <slot />
    </div>
  </body>
</html>
